{
    "compilerOptions": {
      "jsx": "react",
      "module": "commonjs",
      "noImplicitAny": true,
      "outDir": "./build/",
      "preserveConstEnums": true,
      "resolveJsonModule": true,
      "removeComments": true,
      "sourceMap": true,
      "target": "es5",
      "esModuleInterop": true,
      "plugins": [{ "name": "typescript-plugin-css-modules" }]
    },
    "include": [
      "src",
      "declaration.d.ts"
    ]
  }